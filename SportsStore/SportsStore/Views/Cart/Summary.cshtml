@model SportsStore.Models.Entities.Cart

<div id="cart">
    <span class="caption">
        <b>Ваша корзина</b>
        @Model.Lines.Sum(x=>x.Quantity) item(s)
        @Model.ComputeTotalValue().ToString("c")
    </span>
    @Html.ActionLink("В корзину", "Index", "Cart", new { resultUrl = Request.Url.PathAndQuery}, null)
</div>